# Homelab Environment Variables
# Configuration for Raspberry Pi 5

# ===========================================
# GENERAL CONFIGURATION
# ===========================================
# Timezone
TIMEZONE=UTC

# Local domain (optional, for external access)
DOMAIN=local

# User and group IDs for LinuxServer containers
PUID=1000
PGID=1000

# ===========================================
# IMMICH - Photo and video management
# ===========================================
# Immich version (use 'release' for latest stable)
IMMICH_VERSION=release

# Database configuration
IMMICH_DB_USERNAME=immich
IMMICH_DB_PASSWORD=change_this_password
IMMICH_DB_DATABASE_NAME=immich

# Redis configuration
IMMICH_REDIS_PASSWORD=change_this_redis_password

# Upload location (where photos are stored)
UPLOAD_LOCATION=/mnt/nvme/immich/upload

# Database data location
DB_DATA_LOCATION=/mnt/nvme/immich/postgres

# ===========================================
# NGINX PROXY MANAGER
# ===========================================
# Root password for NPM MySQL
NPM_DB_ROOT_PASSWORD=change_this_root_password

# User password for NPM MySQL
NPM_DB_PASSWORD=change_this_user_password

# ===========================================
# SAMBA - File sharing
# ===========================================
# User ID for Samba
SAMBA_USERID=1000

# Group ID for Samba
SAMBA_GROUPID=1000

# Samba user
SAMBA_USER=homelab

# Samba password
SAMBA_PASSWORD=change_this_samba_password

# Share name
SAMBA_SHARE=homelab

# ===========================================
# TRANSMISSION - BitTorrent client
# ===========================================
# Transmission user
TRANSMISSION_USER=admin

# Transmission password
TRANSMISSION_PASSWORD=change_this_transmission_password

# ===========================================
# NETWORK CONFIGURATION
# ===========================================
# Static IP for Raspberry Pi (configure during installation)
RPI_IP=

# Network gateway (configure during installation)
GATEWAY=

# Primary DNS (configure during installation)
DNS_PRIMARY=

# Secondary DNS (configure during installation)
DNS_SECONDARY=

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Custom SSH port (optional)
SSH_PORT=22

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Backup directory
BACKUP_DIR=/opt/backups

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
# Enable monitoring
ENABLE_MONITORING=true

# Email for alerts (optional)
ALERT_EMAIL=

# Telegram webhook for alerts (optional)
TELEGRAM_WEBHOOK=

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
# Memory limit for Docker (MB)
DOCKER_MEMORY_LIMIT=6144

# CPU limit for Docker
DOCKER_CPU_LIMIT=4

# ===========================================
# LOG CONFIGURATION
# ===========================================
# Log level
LOG_LEVEL=info

# Log rotation
LOG_ROTATION=true

# Maximum log size (MB)
LOG_MAX_SIZE=100

# ===========================================
# UPDATE CONFIGURATION
# ===========================================
# Enable automatic updates
AUTO_UPDATE=true

# Update schedule (cron)
UPDATE_SCHEDULE="0 3 * * 0"

# ===========================================
# FIREWALL CONFIGURATION
# ===========================================
# Enable firewall
ENABLE_FIREWALL=true

# Allowed ports (comma separated)
ALLOWED_PORTS=22,80,443,9000,8123,3000,3001,9091,11470,2283

# ===========================================
# SWAP CONFIGURATION
# ===========================================
# Enable swap
ENABLE_SWAP=true

# Swap size (GB)
SWAP_SIZE=2

# Swappiness (0-100)
SWAPPINESS=10